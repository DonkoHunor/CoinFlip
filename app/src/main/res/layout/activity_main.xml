<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/layout">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:src="@drawable/heads"
        android:layout_marginTop="30sp"
        android:id="@+id/kep"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/kep"
        android:layout_marginTop="20sp"
        android:id="@+id/linear"
        >
        <Button
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:text="Fej"
            android:id="@+id/fejBtn"/>
        <Button
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:text="Írás"
            android:id="@+id/irasBtn"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:layout_below="@id/linear"
        android:id="@+id/dobas"
        android:text="Dobás: 0"
        android:textSize="30sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dobas"
        android:id="@+id/gyozelem"
        android:text="Győzelem: 0"
        android:textSize="30sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gyozelem"
        android:id="@+id/vereseg"
        android:text="Vereség: 0"
        android:textSize="30sp"/>



</RelativeLayout>